{{- define "Message"}}
type {{.Name}} struct {
    {{- range $field := .Fields }}
    {{ $field.Name }} {{ $field.Type }} `{{- $field.MarshalledTag }}`
    {{- end }} 
}

{{template "MessageMethods" .}}
{{template "EncodeMethod" .}}
{{template "DecodeMethod" .}}
{{template "IsZeroMethod" .}}
{{template "Init" .}}
{{- end}}

{{- define "MessageMethods"}}
func (x *{{.Name}}) New() protolizer.Reflected {
    return new({{.Name}})
}

func (x *{{.Name}}) Type() protolizer.Type {
    return *protolizer.CaptureTypeByName("{{.TypeName}}")
}
{{- end}}

{{- define "Init"}}
func init() {
    protolizer.RegisterTypeAs[{{.Name}}]("{{.TypeName}}")
}
{{- end}}